@model List<ApplicationType>

<div class="d-flex flex-column align-items-center">
    @foreach (var item in Model)
    {
        <div class="d-flex flex-row card text-center w-40 m-1 p-2">
            <p><b>Name:</b> @item.Name</p>
            <a asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">
                Edit
            </a>
            <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                Delete
            </a>
        </div>
    }
    <a asp-action="Create" class="btn btn-primary mt-1">Add new type</a>
</div>
